  "prettier.singleQuote": true,
  "prettier.printWidth": 70,
  "prettier.tabWidth": 2,
  "[javascript]": {  
    // "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "editor.formatOnType": true
}
