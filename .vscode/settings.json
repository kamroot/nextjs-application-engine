{
  "[mdx]": {
    "editor.wordWrap": "on"
  },
  "grammarly.overrides": [
    {
      "config": {
        "audience": "knowledgeable",
        "dialect": "british",
        "domain": "technical",
        "emotions": ["friendly", "analytical"],
        "goals": ["inform"]
